    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "build/ecu_firmware.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "openocd.cfg",
            ]
        },
        {
            "name": "ESP2",
            "cwd": "${workspaceRoot}",
            "executable": "build/ecu_firmware.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "192.168.4.1:2022",
            "showDevDebugOutput": true
        },
    ]
}